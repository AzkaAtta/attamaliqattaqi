---
import '~/assets/styles/tailwind.css';

import { I18N } from 'astrowind:config';

import CommonMeta from '~/components/common/CommonMeta.astro';
import Favicons from '~/components/Favicons.astro';
import CustomStyles from '~/components/CustomStyles.astro';
import ApplyColorMode from '~/components/common/ApplyColorMode.astro';
import Metadata from '~/components/common/Metadata.astro';
import SiteVerification from '~/components/common/SiteVerification.astro';
import Analytics from '~/components/common/Analytics.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

// Comment the line below to disable View Transitions
import { ClientRouter } from 'astro:transitions';

import type { MetaData as MetaDataType } from '~/types';

export interface Props {
  metadata?: MetaDataType;
}

const { metadata = {} } = Astro.props;
const { language, textDirection } = I18N;
---

<!doctype html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <CommonMeta />
    <Favicons />
    <CustomStyles />
    <ApplyColorMode />
    <Metadata {...metadata} />
    <SiteVerification />
    <Analytics />

  <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@graph": [
        {
          "@type": "Organization",
          "@id": "https://auradigital.id/#organization",
          "name": "Aura Digital",
          "url": "https://auradigital.id",
          "logo": {
            "@type": "ImageObject",
            "url": "https://auradigital.id/logo.png"
          },
          "sameAs": [
            "https://www.instagram.com/auradigital.id",
            "https://www.facebook.com/auradigital.id",
            "https://twitter.com/auradigital_id"
          ],
          "contactPoint": {
            "@type": "ContactPoint",
            "telephone": "+62-812-3456-7890",
            "contactType": "Customer Support"
          }
        },
        {
          "@type": "WebSite",
          "@id": "https://auradigital.id/#website",
          "url": "https://auradigital.id",
          "name": "Aura Digital",
          "publisher": {
            "@id": "https://auradigital.id/#organization"
          },
          "potentialAction": {
            "@type": "SearchAction",
            "target": "https://auradigital.id/search?q={search_term_string}",
            "query-input": "required name=search_term_string"
          }
        },
        {
          "@type": "WebPage",
          "@id": "https://auradigital.id/#webpage",
          "url": "https://auradigital.id",
          "name": "Aura Digital - Jasa Buzzer & Marketing Sosial Media",
          "description": "Aura Digital adalah penyedia jasa buzzer, like, view, komentar, dan promosi sosial media terpercaya di Indonesia.",
          "inLanguage": "id-ID",
          "isPartOf": {
            "@id": "https://auradigital.id/#website"
          },
          "breadcrumb": {
            "@id": "https://auradigital.id/#breadcrumb"
          }
        },
        {
          "@type": "BreadcrumbList",
          "@id": "https://auradigital.id/#breadcrumb",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Beranda",
              "item": "https://auradigital.id/"
            }
          ]
        },
        {
          "@type": "LocalBusiness",
          "@id": "https://auradigital.id/#localbusiness",
          "name": "Aura Digital",
          "image": "https://auradigital.id/logo.png",
          "url": "https://auradigital.id",
          "telephone": "+62-812-3456-7890",
          "address": {
            "@type": "PostalAddress",
            "streetAddress": "Jl. Contoh No.123",
            "addressLocality": "Bandung",
            "addressRegion": "Jawa Barat",
            "postalCode": "40123",
            "addressCountry": "ID"
          },
          "openingHours": "Mo-Fr 09:00-17:00",
          "priceRange": "IDR"
        }
      ]
    }
  </script>

    <!-- Comment the line below to disable View Transitions -->
    <ClientRouter fallback="swap" />
  </head>

  <body class="antialiased text-default bg-page tracking-tight">
    <slot />

    <BasicScripts />
  </body>
</html>
